<% provide :title, t("admin_manufacturer") %>
<% provide :db, t("manufacturer") %>
<% provide :action, t("soft_delete") %>
<div class="box-body">
  <div id="example1_wrapper" class="dataTables_wrapper form-inline dt-bootstrap">
    <div class="row">
      <div class="col-sm-12">
        <div class="row">
          <div class="col-md-4 col-md-offset-8" id="div-search">
            <%# search_form_for [:admin, @q] do |f| %>
              <div class="field">
                <div class="col-md-8">
                  <%# f.search_field :name_cont, id: "input_search" %>
                </div>
              </div>
              <div class="actions">
                <div class="col-md-4">
                  <%# f.submit t("search"), id: "search_admin" %>
                </div>
              </div>
            <%# end %>
          </div>
        </div>
        <table id="example1" class="table table-bordered table-striped dataTable" role="grid" aria-describedby="example1_info">
          <thead>
            <tr role="row">
              <th class="sorting_asc" tabindex="0" aria-controls="example1" rowspan="1" colspan="1">
                <%= t "name" %>
              </th>
              <th class="sorting" tabindex="0" aria-controls="example1" rowspan="1" colspan="1">
                <%= t "action" %>
              </th>
            </tr>
          </thead>
          <tbody>
            <% @manufacturers.each do |m| %>
              <tr role="row" class="odd">
                <td class="sorting_1"><%= m.name %></td>
                <td>
                  <%= link_to t("restore"), admin_restore_url(m.id), method: :put  %> |
                  <%= link_to t("Delete"), admin_harddelete_url(m.id), method: :delete,
                    data: {confirm: t("you_sure")} %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
        <div class="paginate_page">
          <%= paginate @manufacturers %>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="box-footer">
  <%= link_to t("list"), admin_manufacturers_url %>
</div>
